    <div class="jumbotron">
      <h1>Contests</h1>
      <ul>
        <% contests.forEach(function(contest) { console.log(contest); %>
          <li style="border: 2px solid #ccc; list-style: none;">
            <p><strong>
                <%= contest.con_status %>
              </strong></p>
            <img src="/images/products/<%= contest.pr_thumbnails %>" width="100px" height="100px" />
            <img src="/images/contest_cover/<%= contest.con_thumbnails %>" width="200px" height="150px" />
            <p>
              <%= contest.product_id %>,
            </p>
            <p>
              con_spo <%= contest.con_spots %>
            </p>
            <button><a href="/cart/<%= contest.con_id %>">View Details</a></button>
          </li>
          <% }); %>
      </ul>
    </div>
